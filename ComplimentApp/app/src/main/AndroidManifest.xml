<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.matikano.complimentapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".ComplimentApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_compliment"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_compliment"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComplimentApp"
        tools:targetApi="31">

        <receiver android:name="com.matikano.complimentapp.domain.receivers.NotificationAlarmReceiver"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.ComplimentApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>